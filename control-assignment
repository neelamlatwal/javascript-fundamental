// Determine if a given number is positive, negative, or zero.

let number = -10;
if (number > 0) {
    console.log("Number is Poistive")
}
else if (number < 0) {
    console.log("Number is Negative");
}
else if (number == 0) {
    console.log("Number is Zero");
}



