// }



// Display the multiplication table of a given number, skipping multiplication by 3.

// print 2 table
let multiplicationNumber = 5;
for (i = 1; i <= 10; i++) {
    if (i == 3) {
        continue
    }
    const result = multiplicationNumber * i;
    console.log(`${multiplicationNumber} * ${i} = ${result}`);

}
